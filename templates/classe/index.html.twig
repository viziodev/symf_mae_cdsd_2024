{% extends 'base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block content %}

                     <div class="col-lg-12">
                            <div class="card easion-card">
                                
                                <div class="card-body ">
                                   <a name="" id="" class="btn btn-info btn-sm float-right" href="{{path('app_classe_save')}}" role="button"> <i class="fa fa-plus" aria-hidden="true"></i> Nouveau</a><br>

                                    {{form_start(form)}}
                                    <div class="d-flex">
                                     <div class="col">
                                        <div class="mb-3">
                                            <label for="" class="form-label">Niveau</label>
                                                {{form_widget(form.niveau)}}
                                          
                                        </div>
                                    </div>
                                     <div class="col">
                                        <div class="mb-3">
                                            <label for="" class="form-label">Filiere</label>
                                                 {{form_widget(form.filiere)}}
                                         
                                        </div>
                                     </div>
                                     <div class="col">
                                        <div class="mb-3">
                                            <label for="" class="form-label"></label>
                                                 {{form_widget(form.save,{"attr":{"style":"margin-top:35px"}})}}
                                         
                                        </div>
                                     </div>
                                  </div>
                                  </div> 
                                   
                                    {{form_end(form)}}
                              </div>
                            </div>
                  </div>

   <form class="d-flex">
    <div class="col">
        <div class="mb-3">
            <label for="" class="form-label">Inline Form</label>
            <input type="text" name="" id="" class="form-control" placeholder="" aria-describedby="helpId">
            <small id="helpId" class="text-muted">Help text</small>
        </div>
    </div>
   </form>
    <div class="col-lg-12">
                            <div class="card easion-card">
                                <div class="card-header">
                                    <div class="easion-card-icon">
                                        <i class="fas fa-table"></i>
                                    </div>
                                    <div class="easion-card-title">Liste des Classe</div>
                                </div>
                                <div class="card-body ">
                                    <table class="table table-hover table-in-card">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Libelle</th>
                                                <th scope="col">Niveau</th>
                                                <th scope="col">Filiere</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for classe in classesNotArchived %}
                                            <tr>
                                                <th scope="row">{{classe.id}}</th>
                                                <td>{{classe.nomClasse}}</td>
                                                <td>{{classe.filiere.nomFiliere}}</td>
                                                <td>{{classe.niveau.nomNiveau}}</td>
                                                <td>
                                                    <a name="" id="" class="btn btn-warning btn-sm " href="{{path('app_classe_save',{id:classe.id})}}" role="button"> <i class="fa fa-edit" aria-hidden="true"></i> Edit</a>
                                                 </td>
                                            </tr>
                                        {% endfor %}
                                            
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

{% endblock %}
